{{#each pendingUsers}}
<div class='col-xs-12 col-ms-6 col-sm-4 col-md-4 col-lg-4 pending-request-container tile-container' id='pending-request-container-{{_id}}'>
  <div class='tile pending-request-tile' name="pending-request-{{_id}}" data-id='{{_id}}'>
  	<div class='tile-icon' style='float: left'><img class='icon' src="/images/user.gif"/></div>
  	<div class='pending-request-header tile-header'>
    	<a data-toggle="modal" data-target='#pending-request-modal-{{_id}}'>
    		<h4 class='tile-title'>{{#if fullName}}{{fullName}}{{else}}{{firstName}} {{lastName}}{{/if}}</h4>
    	</a>
    	<p class='tile-subtitle'>{{role}}<h class='small-text'>{{#if onHold}}(waitlisted){{/if}}</h></p>

    </div>
    </div>
    <div id="pending-request-modal-{{_id}}" class="pending-request-item-modal modal fade" role="dialog">
	  <div class="modal-messages"></div>
	  <div class="modal-dialog modal-xs">
	    <div class="modal-content">
	      <div class="modal-header modal-title">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        {{#if fullName}}{{fullName}}{{else}}{{firstName}} {{lastName}}{{/if}}'s Profile
	      </div>
	      <div class="modal-body">
	        {{> profileTable}}
	      </div>     
	    </div>
	  </div>
	</div>    
    <div>
        <input id='username-{{_id}}' type="hidden" value="{{username}}"/>
        <input id='requestToken-{{_id}}' type="hidden" value="{{requestToken}}"/>
		<input id='csrf' type="hidden" name="_csrf" value="{{csrfToken}}">
		<center>
			<button id='approve-button-{{_id}}' class='btn btn-success btn-hg approve-button'>Approve</button>
			<button id='reject-button-{{_id}}' class='btn btn-danger btn-hg reject-button'>Reject</button>
			{{#ifNot onHold}}
				<button id='waitlist-button-{{_id}}' class='btn btn-warning btn-hg waitlist-button'>Waitlist</button>
			{{/ifNot}}
		</center>
    </div>
</div>
{{/each}}